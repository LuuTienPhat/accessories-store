<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./include/store-head'); -%>

    <%- include('./include/store-styles'); -%>
  </head>

  <body>
    <%- include('./include/store-header'); -%>

    <main class="main">
      <div class="sign-up-form-container mx-auto my-10 border-2 border-gray-200 rounded-md">
        <div class="flex">
          <a href="<%=pagesPath.logInPagePath%>" class="switch-to-sign-in w-full py-2 relative text-xl text-indigo-400 text-center active-show-after">ĐĂNG NHẬP</a>
          <a href="<%=pagesPath.registerPagePath%>" class="switch-to-sign-up w-full py-2 relative text-xl text-indigo-400 text-center"> ĐĂNG KÝ </a>
        </div>
        <form action="<%=pagesPath.logInPagePath%>" class="w-full p-4" method="post">
          <input type="text" name="username" id="username" class="w-full p-2 border-2 border-gray-300 rounded-md mb-3" placeholder="Nhập tên đăng nhập" />
          <!-- <errors name="username" cssClass="error" element="div" /> -->
          <input type="password" name="password" id="password" class="w-full p-2 border-2 border-gray-300 rounded-md mb-3" placeholder="Mật khẩu" />
          <!-- <errors name="password" cssClass="error" element="div" /> -->
          <div class="mb-2 flex justify-end">
            <label for="showPassword" class="">
              <input type="checkbox" class="mr-1" id="showPassword" />
              Hiện mật khẩu
            </label>
          </div>
          <button class="w-full px-4 py-2 font-bold bg-indigo-400 hover:bg-indigo-500 transition-colors text-white rounded-md mb-3">
            ĐĂNG NHẬP
          </button>
          <a href="<%=pagesPath.forgotPasswordPagePath%>" class="pr-2 py-1 block hover:text-indigo-400 transition-colors w-full text-center mb-3">
            Quên mật khẩu?
          </a>
          <!-- <h4 class="text-center mb-3">Hoặc đăng nhập với</h4> -->
          <!-- <button class="w-full px-4 py-2 font-bold bg-blue-700 hover:bg-blue-500 transition-colors text-white rounded-md mb-3">
            <i class="fab fa-facebook-f mr-1"></i>
            Đăng nhập bằng Facebook
          </button>
          <button class="w-full px-4 py-2 font-bold bg-red-700 hover:bg-red-500 transition-colors text-white rounded-md">
            <i class="fab fa-google mr-1"></i
              >Đăng nhập bằng Google
          </button> -->
        </form>
      </div>
    </main>
    <%- include('./include/store-footer') -%>
  </body>

  <%- include('./include/store-script') -%>
  <script src="/scripts/store/sign-up.js"></script>
    <script>
      const show = document.getElementById("showPassword");
      const inputPasswordField = document.querySelectorAll('input[type="password"]');
      show.addEventListener("click", function (e) {
        if (this.checked) {
          for (var i = 0; i < inputPasswordField.length; i++) {
            inputPasswordField[i].type = "text";
          }
        } else {
          for (var i = 0; i < inputPasswordField.length; i++) {
            inputPasswordField[i].type = "password";
          }
        }
      });
    </script>
</html>
